{
  "compilerOptions": {
    "strict": false,
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": "./src" 
  },
  "include": ["./package.json","src/"],
  "exclude": ["src/ui"]
}